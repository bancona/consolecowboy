// Part of this was from http://mherman.org/blog/2015/01/31/local-authentication-with-passport-and-express-4/#.VqcELiorKM_
// See README
doctype html
html
  head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css', rel='stylesheet', media='screen')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav(class='navbar navbar-default', id='nav', style='margin:0;border:0;border-radius:0;background-color:#888')
      ul(class='nav navbar-nav navbar-left')
        li: a(href='/', style='color:#FFF;font-weight:bold;') Console Cowboy's Particle Simulator
        li: a(id='mouselocation', style='color:#FFF;')
        li: a(id='hint', style='color:#FFF;font-weight:bold;')
      ul(class='nav navbar-nav navbar-right', id='right-navbar-list')
        if (!user)
          li: a(href='/login', style='margin-right:10px;color:#FFF;font-weight:bold;') Login
        if (user)
          li: a(style='margin-right:10px;color:#FFF;font-weight:bold;') Welcome, #{user.username}
          li: a(href='/snapshots' style='margin-right:10px;color:#FFF;font-weight:bold;') View Snapshots
          li: a(href='#', onclick='document.takeSnapshot();return false;', id='snapshot', style='margin-right:10px;color:#FFF;font-weight:bold;')
          li: a(href='/logout', style='color:#FFF;font-weight:bold;') Logout
        li: a(href='https://github.mit.edu/mit6148-2016/consolecowboysincyberspace/blob/master/README.md', style='margin-right:10px;color:#FFF;font-weight:bold;') About

    script(src='https://code.jquery.com/jquery.js')
    block content

  script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js')