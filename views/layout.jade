doctype html
html
  head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css', rel='stylesheet', media='screen')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav(class='navbar navbar-default', id='nav', style='margin:0;border:0;border-radius:0;background-color:#888')
      ul(class='nav navbar-nav navbar-left')
        li: a(href='/', style='color:#FFF;font-weight:bold;') Console Cowboy's Particle Simulator
        li: a(id='mouselocation', style='color:#FFF;')
      ul(class='nav navbar-nav navbar-right')
        if (!user)
          li: a(href='/login', style='margin-right:10px;color:#FFF;font-weight:bold;') Login
        if (user)
          li: a(style='margin-right:10px;color:#FFF;font-weight:bold;') Welcome, #{user.username}
          //li: a(onclick='takeSnapshot();') Take Snapshot
          li: a(href='/logout', style='margin-right:10px;color:#FFF;font-weight:bold;') Logout

    block content

  script(src='http://code.jquery.com/jquery.js')
  script(src='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js')